@model SolsticeDataServices.DAL.Entities.Users

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_External.cshtml";
}

<!--slider area start-->
<div class="inner-slider-area">
    <div class="container">
        <div class="inner-text-slide">
            <h1>Sign Up</h1>
        </div>
    </div>
</div>
<!--slider area end-->
<!--body area start-->
@using (Html.BeginForm("UserRegister", "SignUp", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Users</h4>
        <hr />*@

        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

