@model SolsticeDataServices.UserInterface.ViewModel.DashboardDeviceViewModel


@foreach (var item in Model.lstRegionCount)
{
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-hover table table-striped table-bordered dashtable">
        <thead style="background-color: #e2e7eb; color: white; padding-top:5px">
            <tr>
                <th style="color: black; ">
                    @item.Region
                </th>
                <th style="color: black; ">

                </th>
            </tr>
        </thead>

        @foreach (var dev in Model.lstDevice)
        {
            if (item.Region == dev.Region)
            {
                <tr style="background-color: #f5f7f9">
                    <td align="left" valign="top" width="22%"><a href="/Device?Dev=@dev.DeviceDefinitionId&reg=@dev.Region">@dev.DeviceName</a></td>
                    <td align="left" valign="top" width="70%">@dev.TotalCnt</td>
                </tr>
            }
        }

        <tr style="background-color: #f5f7f9">
            <td align="left" valign="top" width="22%">Total</td>
            <td align="left" valign="top" width="70%">@item.Cnt</td>

        </tr>
    </table>
}






