@model SolsticeDataServices.DAL.Entities.Device

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddDevice", "Device", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="admin-nav-area">
        <div class="container">
            <div class="dash-nav">
                <h3>My Devices</h3>
                <div class="iconarea">
                    <ul>
                        <li><a href="/Device" title="Device"><img src="/images/navico1.png" alt=""></a></li>
                        <li><a href="#" title="Events"><img src="/images/navico2.png" alt=""></a></li>
                        <li><a href="/Simulator" title="Simulator"><img src="/images/navico3.png" alt=""></a></li>
                        <li><a href="#" title="Support"><img src="/images/navico4.png" alt=""></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <section class="container">
        <div class="adminbodypan">
            @if (TempData["SubmitError"] != null)
            {
                <div id="devicemessage" class="alert alert-success show">
                    <button type="button" class="close" data-dismiss="alert">x</button>
                    <span>
                       @Html.Raw(TempData["SubmitErrorDtls"])
                        @Html.Encode(@Html.Raw(TempData["SubmitError"]))
                    </span>
                </div>
            }
            <div class="form-horizontal">
                <h4></h4>
                @*<hr />*@
                <br />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.DeviceSerialNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.DeviceSerialNumber, new { @class = "form-control", @style = "width: 25%" })
                        @Html.ValidationMessageFor(model => model.DeviceSerialNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LogicalDeviceId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.LogicalDeviceId, new { @class = "form-control", @style = "width: 25%" })
                        @Html.ValidationMessageFor(model => model.LogicalDeviceId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DeviceId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.DeviceDefinitionId, new { htmlAttributes = new { @class = "form-control" } })*@
                        @*@Html.DropDownListFor(model => model.DeviceDefinitionId, new SelectList(ViewBag.DeviceDefinitionId, "DeviceId", "DeviceName"), new { @class = "selectpicker" })
                        @Html.ValidationMessageFor(model => model.DeviceDefinitionId, "", new { @class = "text-danger" })*@
                        @Html.DropDownListFor(model => model.DeviceId, new SelectList(ViewBag.DeviceDefinitionId, "DeviceId", "DeviceName"), new { @class = "selectpicker" })
                        @Html.ValidationMessageFor(model => model.DeviceId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RegionId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.RegionId, new SelectList(ViewBag.Region, "RegionId", "RegionName"), new { @class = "selectpicker" })
                        @Html.ValidationMessageFor(model => model.RegionId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                        <input type="button" value="Cancel" class="btn btn-default" onclick="location.href='/Device'" />
                    </div>
                </div>
            </div>
        </div>
    </section>
}


